@model Student_Management_System.Models.Enrollment

@{
    ViewData["Title"] = "Enrollment Details";
}

<h1>Enrollment Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Enrollment ID
        </dt>
        <dd class="col-sm-10">
            @Model.EnrollmentId
        </dd>
        <dt class="col-sm-2">
            Student
        </dt>
        <dd class="col-sm-10">
            @Model.Student?.FirstName @Model.Student?.LastName
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course?.CourseName
        </dd>
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @Model.Teacher?.FirstName @Model.Teacher?.LastName
        </dd>
        <dt class="col-sm-2">
            Enrollment Date
        </dt>
        <dd class="col-sm-10">
            @Model.EnrollmentDate?.ToString("MM/dd/yyyy")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Enrollments</a>

    <a asp-action="Edit" asp-route-id="@Model.EnrollmentId" class="btn btn-primary">Edit enrollment</a>

    <form asp-action="Delete" method="post" style="display:inline;">
        <input type="hidden" name="id" value="@Model.EnrollmentId" />
        <button type="submit" class="btn btn-danger">Delete Enrollment</button>
    </form>

</div>
