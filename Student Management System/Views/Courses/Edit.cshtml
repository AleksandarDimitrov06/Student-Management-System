@model Student_Management_System.Models.Course

<h1>Edit Course</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="CourseName" class="control-label">CourseName</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Courses")" class="btn btn-secondary">Cancel</a>
</form>


